.Bd -literal -offset indent
define t_ocl {
  vput ! i cat ~/.mysig
  if [ $? -eq 0 ]
     vput csop message-inject-tail trim-end $i
  end

  # Alternatively
  readctl create ~/.mysig
  if [ $? -eq 0 ]
    readall i
    if [ $? -eq 0 ]
      vput csop vexpr message-inject-tail trim-end $i
    end
    readctl remove ~/.mysig
  end
}
